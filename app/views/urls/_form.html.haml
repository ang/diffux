= form_for @url do |f|
  - if @url.errors.any?
    #error_explanation
      %h2= "#{pluralize(@url.errors.count, "error")} prohibited this url from being saved:"
      %ul
        - @url.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :viewport_width, 'Viewport width (in pixels)'
    = f.text_field :viewport_width
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
