.snapshot
  %h1 Snapshot
  %table.table
    %tr
      %td
        %strong Website URL:
      %td= link_to @snapshot.url.address, @snapshot.url
    %tr
      %td
        %strong When?
      %td= time_ago_in_words(@snapshot.created_at) + ' ago'


  = button_to 'Delete', @snapshot, method: :delete, data: { confirm: 'Are you sure?' },
    class: 'btn btn-danger'
  .clearfix
    .pull-left
      %figure
        %figcaption
          Actual image
        = cl_image_tag @snapshot.image_name, width: 300
    .pull-left
      %figure
        %figcaption
          Diff
        = cl_image_tag @snapshot.diff_image_name, width: 300
